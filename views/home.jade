doctype html
html
  head
    meta(charset="utf-8")
    title iLoominate: Storybook App

    // 3rd party libraries
    link(href="/bootstrap.min.css", rel="stylesheet", type="text/css")

    // custom style
    link(href="/main.css", rel="stylesheet", type="text/css")

  body.homepage
    input#csrf(type='hidden', name='_csrf', value=token)

    include partials/main_menu

    div.container
      div.row
        div.col-md-8
          h1.translate Welcome to iLoominate
        div.col-md-4
          br
          a.btn.btn-success.translate(href="/make") Start Writing
          br
          br
          a.btn.btn-success.translate(href="/signup") Sign Up

      br
      br

      div.row.blank
        div.col-xs-4
          h3.translate Storybook App
          p.translate An app for writing children's books.
          p.translate You can write books when you're online or offline.
          p.translate It's free and easy to use.

        div.col-xs-4
          h3.translate Multilingual
          p.translate example_lang
          p.translate unicode
          p.translate easy_translate

        div.col-xs-4
          h3.translate Creative and Collaborative
          p.translate sign_up_users
          p.translate share_with_team

      br
      br

      div.row.blank
        div.col-xs-4
          h3.translate Designed by Educators
          p.translate our_team

        div.col-xs-4
          h3.translate Printable and Portable
          p.translate work_offline
          p.translate computer_types
          p.translate download_app_store
          a.btn.btn-primary(href="/iloominate-src.crx") Download iLoominate

        div.col-xs-4
          h3.translate Open Source
          p.translate built_open
          p
            span.translate js_coders
            span &nbsp;
            a(href="https://github.com/mapmeld/iloominate", target="_blank") GitHub.

      div.row
        br
        br


    // 3rd party libraries
    script(type="text/javascript", src="/jquery-1.11.0.min.js")
    script(type="text/javascript", src="/bootstrap.min.js")
    script(type="text/javascript", src="/polyglot.min.js")

    include partials/translate_page

    include partials/analytics
