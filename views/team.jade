doctype html
html
  head
    meta(charset="utf-8")
    title= 'iloominate: Storybook App'

    // 3rd party libraries
    link(href="/bootstrap.min.css", rel="stylesheet", type="text/css")

    // custom style
    link(href="/main.css", rel="stylesheet", type="text/css")

  body
    include partials/main_menu

    div.container
      .row
        h1 Team Page
      .row
        .col-md-6
          .well
            h3.translate About the team
            ul
              li Users: #{team.users.length}
              if team.language
                li Primary Language: #{team.language}
              li Word Lists: #{wordlists.length}
              li Images: #{images.length}

      .row
        .col-md-6
          if user
            h4.translate Join team
            form(action="/team/join", method="POST")
              input(type='hidden', name='_csrf', value=token)
              input(type="hidden", name="teamname" value="#{team.name}")
              input.btn.btn-success.translate(type="submit" value="Ask to Join")


    // 3rd party libraries
    script(type="text/javascript", src="/jquery-1.11.0.min.js")
    script(type="text/javascript", src="/bootstrap.min.js")
    script(type="text/javascript", src="/polyglot.min.js")

    include partials/translate_page

    include partials/analytics
