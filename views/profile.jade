doctype html
html
  head
    meta(charset="utf-8")
    title= 'iloominate: Storybook App'

    // 3rd party libraries
    link(href="/bootstrap.min.css", rel="stylesheet", type="text/css")

    // custom style
    link(href="/main.css", rel="stylesheet", type="text/css")

  body
    div.navbar.navbar-inverse.navbar-fixed-top(role="navigation")
      div.container
        div.navbar-header

        ul.nav.navbar-nav
          li.active
            a(href="#")
              span iLoominate&nbsp;&nbsp;
              span.translate Online

        ul.nav.navbar-nav.pull-right
          li
            a(href="#", data-toggle="dropdown")
              span.translate Language
              span &nbsp;▽
            ul#languageselect.dropdown-menu(role="menu", aria-labelledby="dLabel")
              li.en(role="presentation")
                a(href="/profile?language=en", role="menuitem") English
              li.es(role="presentation")
                a(href="/profile?language=es", role="menuitem") Español
              li.ht(role="presentation")
                a(href="/profile?language=ht", role="menuitem") Kreyòl Ayisyen
              li.ne(role="presentation")
                a(href="/profile?language=ne", role="menuitem") नेपाली
              li.ar(role="presentation")
                a(href="/profile?language=ar", role="menuitem") العربية
          li
            a#logout.translate(href="/logout") Log Out

    br
    br
    br

    div.container
      .row
        h1 Profile Page
      .row
        .col-md-6
          h3.translate Welcome to iLoominate!
          h3.translate You are signed in.
          a.btn.btn-large.btn-info(href="/user/#{user._id}") My Books
          br
          br
          a.btn.btn-large.btn-success(href="/edit") New Book

        .col-md-6
          .well
            h3.translate About this user
            ul
              li ID #{user._id}
              li email #{user.local.email}

            h3.translate Team
            ul
              for team in user.teams
                if user.admin
                  li
                    span #{team}&nbsp;&nbsp;&nbsp;
                    a(href="/team/#{team}/manage")
                      span (
                      span.translate leader
                      span )
                else
                  li
                    a(href="/team/#{team}") #{team}

            h4.translate Join team
            form(action="/team/join", method="POST")
              input(type='hidden', name='_csrf', value=token)
              input.translate(type="input", name="teamname" placeholder="Team name")
              input.btn.btn-success.translate(type="submit" value="Ask to Join")

            br
            br
            
            h4.translate Lead new team
            form(action="/team/create", method="POST")
              input(type='hidden', name='_csrf', value=token)
              input.translate(type="input", name="teamname" placeholder="Team name")
              input.btn.btn-success.translate(type="submit" value="Create")

    // 3rd party libraries
    script(type="text/javascript", src="/jquery-1.11.0.min.js")
    script(type="text/javascript", src="/bootstrap.min.js")
    script(type="text/javascript", src="/polyglot.min.js")

    // custom script
    script(type="text/javascript") var translations = !{translations};
    script(type="text/javascript")
      != 'var outOfChromeApp = true;'
    script(type="text/javascript", src="/localize.js")
