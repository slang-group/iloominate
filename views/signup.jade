doctype html
html
  head
    meta(charset="utf-8")
    title= 'iloominate: Storybook App'

    // 3rd party libraries
    link(href="/bootstrap.min.css", rel="stylesheet", type="text/css")

    // custom style
    link(href="/main.css", rel="stylesheet", type="text/css")

  body
    div.container
      .row-fluid
        h1
          span.fa.fa-sign-in
          span= 'Signup'
        if message.length
          div.alert.alert-danger #{message}

        form(action="/signup", method="post")
          input(type='hidden', name='_csrf', value=token)
          .form-group
            label.translate Email
            input.form-control(type="text", name="email")
          .form-group
            label.translate Password
            input.form-control(type="password", name="password")
          .form-group
            label
              span.translate Team
              span.translate (Optional)
            input.form-control(type="text", name="team")
          button.btn.btn-warning.translate(type="submit")= 'Sign up'
      .row-fluid
        a.translate(href="/login")= 'Log In'

    // 3rd party libraries
    script(type="text/javascript", src="/jquery-1.11.0.min.js")

    script(type="text/javascript", src="/polyglot.min.js")

    // custom script
    script(type="text/javascript") var translations = !{translations};
    script(type="text/javascript")
      != 'var outOfChromeApp = true;'
    script(type="text/javascript", src="/localize.js")
